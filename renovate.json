{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>jwnmulder/renovate-config"
  ],

  "assignees": [ "jwnmulder" ],

  "ignorePaths": [
    "rm_builder/requirements.txt"
  ],

  "packageRules": [
    {
      "matchPaths": [".pre-commit-config.yaml"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ]
}
